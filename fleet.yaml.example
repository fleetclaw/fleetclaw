# FleetClaw Fleet Configuration
#
# This is the single input file for generate-configs.py.
# Fill in your fleet details, then run:
#   python generate-configs.py
#
# Output goes to output/ — workspaces, configs, docker-compose.yml, .env.template, setup-redis.sh

fleet:
  name: "Demo Mining Site"
  timezone: "Australia/Perth"
  shift_start: "06:00"          # Feeds into openclaw.json activeHours
  shift_end: "18:00"            # Heartbeats pause outside these hours
  model: "fireworks/accounts/fireworks/models/kimi-k2p5"

  # Redis connection (used by all agents)
  redis_url: "redis://redis:6379"

  # Escalation contacts (referenced by Clawvisor/Clawordinator skills)
  contacts:
    manager:
      name: "Joe Foreman"
      telegram: "joe_foreman"
    safety:
      name: "Sarah Safety"
      telegram: "sarah_safety"
    owner:
      name: "Mike Owner"
      telegram: "mike_owner"

# Fleet roster — one entry per machine
# Each asset gets its own agent container and Telegram bot
assets:
  - id: EX-001
    serial: CAT0390F2ABC12345

  - id: EX-002
    serial: CAT0390F2DEF67890

  - id: KOT28
    serial: KOM930E4XYZ98765

  - id: KOT39
    serial: KOM930E4UVW54321

  - id: DOZ-01
    serial: CATD11T8QRS11111

  - id: GRD-01
    serial: CAT16M3LMN22222

# Heartbeat intervals (optional — defaults shown)
# Controls how often each agent role runs proactive checks
heartbeats:
  asset: "30m"          # Nudges land mid-shift
  clawvisor: "2h"       # Oversight cadence
  clawordinator: "4h"   # Strategic, mostly reactive
